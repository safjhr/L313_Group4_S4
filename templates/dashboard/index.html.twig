{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="container">
    <h1>Dashboard</h1>
    <p>Bienvenue sur le tableau de bord. Vous êtes connecté.</p>
    
    <h2>Actions</h2>
    <ul>
        <li><a href="{{ path('app_link_index') }}">Gérer les liens</a></li>
        <li><a href="{{ path('app_keyword_index') }}">Gérer les mots clés</a></li>
        {% if is_granted('ROLE_ADMIN') %}
        <li><a href="{{ path('app_user_index') }}">Gérer les utilisateurs</a></li>
        {% endif %}
    </ul>
    
    <a href="{{ path('app_logout') }}">Se déconnecter</a>
</div>
{% endblock %}