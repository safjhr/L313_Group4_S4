{% extends 'base.html.twig' %}

{% block title %}Link index{% endblock %}

{% block body %}
    <h1>Link index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lien_url</th>
                <th>Lien_titre</th>
                <th>Lien_desc</th>
                <th>Mots clés</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for link in links %}
            <tr>
                <td>{{ link.id }}</td>
                <td>{{ link.lienUrl }}</td>
                <td>{{ link.lienTitre }}</td>
                <td>{{ link.lienDesc }}</td>
                <td>
                    {% for keyword in link.keywords %}
                        <span class="badge bg-primary me-1">{{ keyword.name }}</span>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_link_show', {'id': link.id}) }}">show</a>
                    <a href="{{ path('app_link_edit', {'id': link.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_link_new') }}">Create new</a>
    <a href="{{ path('app_keyword_index') }}" class="ms-3">Gérer les mots clés</a>
{% endblock %}
