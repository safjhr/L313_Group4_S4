{% extends 'base.html.twig' %}

{% block title %}Link index{% endblock %}

{% block body %}
    <h1>Liste des liens</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>URL du lien</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Mots clés</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for link in links %}
            <tr>
                <td>{{ link.id }}</td>
                <td>{{ link.lienUrl }}</td>
                <td>{{ link.lienTitre }}</td>
                <td>{{ link.lienDesc }}</td>
                <td>
                    {% for keyword in link.keywords %}
                        <span class="badge bg-primary me-1">{{ keyword.name }}</span>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_link_show', {'id': link.id}) }}" class="btn btn-sm btn-info">Voir</a>
                    <a href="{{ path('app_link_edit', {'id': link.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun lien trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_link_new') }}" class="btn btn-primary">Nouveau</a>
    <a href="{{ path('app_keyword_index') }}" class="btn btn-secondary ms-3">Gérer les mots clés</a>
{% endblock %}
